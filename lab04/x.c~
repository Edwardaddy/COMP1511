#include<stdio.h>

int main(void){
    int r=1;
    int c=1;
    int s;
    
    printf("Enter size: ");
    scanf("%d",&s);
    
    while(r<=s){
        while(c<=s){
            
            if(r==c || c==s+1-r ){
                printf("*");
            }else{
                printf("-");
            }
            c++;

        }
        c=1;
        
       
        r++;
        printf("\n");
        
        
        
    }

    return 0;
}
